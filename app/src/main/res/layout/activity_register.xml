<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity">

    <!--Toolbar-->

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/purple_500"
        android:layout_height="56dp"/>

    <ImageButton
        android:id="@+id/button_back"
        app:layout_constraintRight_toLeftOf="@id/toolbar_title"
        app:layout_constraintTop_toTopOf="@id/toolbar_title"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_title"
        android:background="@drawable/ripple_circle"
        android:src="@drawable/ic_arrow_back"
        android:layout_margin="8dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:textSize="18sp"
        android:layout_marginLeft="56dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="회원가입"/>

    <!--Contents-->

    <TextView
        android:id="@+id/text_title"
        android:text="안녕하세요!"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/layout_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:hint="이름이 뭐에요??"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/button_next"
        android:background="@drawable/ripple_circle"
        android:tint="@color/black"
        android:src="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="다음"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/button_next"
        app:layout_constraintEnd_toStartOf="@+id/button_next"
        app:layout_constraintTop_toTopOf="@+id/button_next" />

    <ImageButton
        android:id="@+id/button_previous"
        android:background="@drawable/ripple_circle"
        android:tint="@color/black"
        android:src="@drawable/ic_next"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="이전"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/button_previous"
        app:layout_constraintStart_toEndOf="@+id/button_previous"
        app:layout_constraintTop_toTopOf="@+id/button_previous" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:max="10"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="5"
        android:progressTint="@color/quantum_bluegrey700"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>