<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity">

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="56dp"/>

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="@string/app_name"/>

    <ImageButton
        android:id="@+id/button_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ripple_circle"
        android:src="@drawable/ic_setting"
        android:tint="@color/white"
        android:scaleType="fitXY"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintCircleRadius="1dp"
        android:cropToPadding="true"
        android:layout_margin="8dp"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp" />

    <LinearLayout
        android:id="@+id/layout"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp" />

    <TextView
        android:elevation="4dp"
        android:text="홈"
        android:textSize="10sp"
        android:clickable="false"
        android:focusable="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/button_home"
        app:layout_constraintEnd_toEndOf="@+id/button_home"
        app:layout_constraintBottom_toBottomOf="@+id/button_home"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:src="@drawable/ic_home"
        android:tint="@color/white"
        android:elevation="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="64dp"
        android:id="@+id/button_home"
        android:paddingBottom="4dp"
        android:background="@drawable/ripple_circle"
        app:layout_constraintEnd_toStartOf="@id/button_search"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="56dp"
        android:layout_height="56dp" />

    <TextView
        android:elevation="4dp"
        android:text="프로필"
        android:clickable="false"
        android:focusable="false"
        android:textSize="10sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/button_profile"
        app:layout_constraintEnd_toEndOf="@+id/button_profile"
        app:layout_constraintBottom_toBottomOf="@+id/button_profile"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:src="@drawable/ic_person"
        android:tint="@color/white"
        android:elevation="4dp"
        android:id="@+id/button_profile"
        android:background="@drawable/ripple_circle"
        android:paddingBottom="4dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toEndOf="@id/button_search"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="56dp"
        android:layout_height="56dp" />

    <TextView
        android:elevation="4dp"
        android:text="탐색"
        android:textSize="10sp"
        android:clickable="false"
        android:focusable="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/button_search"
        app:layout_constraintEnd_toEndOf="@+id/button_search"
        app:layout_constraintBottom_toBottomOf="@+id/button_search"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:src="@drawable/ic_search"
        android:tint="@color/white"
        android:elevation="4dp"
        android:id="@+id/button_search"
        android:background="@drawable/ripple_circle"
        android:paddingBottom="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="56dp"
        android:layout_height="56dp" />

</androidx.constraintlayout.widget.ConstraintLayout>