<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity=""
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ChatActivity">
        <View
            android:id="@+id/view_toolbar"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="56dp"/>
        <ImageButton
            android:id="@+id/button_back"
            android:elevation="4dp"
            app:layout_constraintRight_toLeftOf="@id/toolbar_title"
            app:layout_constraintTop_toTopOf="@id/toolbar_title"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_title"
            android:background="@drawable/ripple_circle"
            android:src="@drawable/ic_arrow_back"
            android:layout_margin="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageButton
            android:id="@+id/button_menu"
            android:elevation="4dp"
            app:layout_constraintLeft_toRightOf="@id/toolbar_title"
            app:layout_constraintTop_toTopOf="@id/toolbar_title"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_title"
            android:background="@drawable/ripple_circle"
            android:src="@drawable/ic_menu"
            android:tint="@color/colorOnPrimary"
            android:layout_margin="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/toolbar_title"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:layout_marginStart="56dp"
            android:layout_marginEnd="56dp"
            android:fontFamily="@font/gmsans_bold"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:text="채팅방 이름"/>
        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="56dp"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:stackFromBottom="true">
            <LinearLayout
                android:id="@+id/chat_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
        <Button
            android:id="@+id/button_meeting"
            android:layout_marginTop="64dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="meeting"
            android:fontFamily="@font/gmsans_medium"
            android:background="@drawable/background_roundrect"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:paddingStart="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/view_chat"
            android:elevation="4dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
        <EditText
            android:elevation="4dp"
            android:id="@+id/edit_text"
            android:padding="8dp"
            android:fontFamily="@font/gmsans_medium"
            android:textColor="@color/white"
            android:layout_marginEnd="56dp"
            android:background="@color/trans"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:textCursorDrawable="@drawable/cursor"
            android:layout_height="56dp"/>
        <ImageButton
            android:id="@+id/button_send"
            android:elevation="4dp"
            android:background="@drawable/background_circle"
            android:backgroundTint="@color/colorOnPrimary"
            android:src="@drawable/ic_baseline_send_24"
            android:tint="@color/white"
            android:padding="4dp"
            android:layout_margin="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toEndOf="@id/edit_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header" />
</androidx.drawerlayout.widget.DrawerLayout>